{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2018",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",  // Define a saída dos arquivos compilados
    "rootDir": "./src"   // Define a pasta raiz do código-fonte
  },
  "include": ["src/**/*"],  // Inclui todos os arquivos TypeScript dentro da pasta src
  "exclude": ["node_modules"]  // Exclui a pasta node_modules
}
